@page
@model MediTechCliente.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="container mt-5">
    <h2>Services</h2>
    <hr />

    <div class="row">
        @foreach (var servicio in Model.Servicios)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@servicio.Nombre</h5>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="mt-3">
        <a asp-page="/RegistrarCita" class="btn btn-primary">Registrar una Cita</a>
    </div>
</div>

<style>
    .card {
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-title {
        font-size: 18px;
        font-weight: bold;
    }
</style>
